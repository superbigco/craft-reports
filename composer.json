{
    "name": "superbig/craft-reports",
    "description": "Write reports with Twig.",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "reports",
        "reporting",
        "report",
        "commerce reporting"
    ],
    "support": {
        "docs": "https://github.com/superbigco/craft-reports/blob/master/README.md",
        "issues": "https://github.com/superbigco/craft-reports/issues"
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Superbig",
            "homepage": "https://superbig.co"
        }
    ],
    "require": {
        "php": "^8.2",
        "craftcms/cms": "^5.5",
        "league/csv": "^9.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main",
        "craftcms/rector": "dev-main",
        "markhuot/craft-pest-core": "^3.0"
    },
    "autoload": {
        "psr-4": {
          "superbig\\reports\\": "src/"
        }
    },
    "extra": {
        "name": "Reports",
        "handle": "reports",
        "class": "superbig\\reports\\Reports"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --fix --ansi",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
